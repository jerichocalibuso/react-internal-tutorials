datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"

  // PostgreSQL
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id     String   @id @default(uuid())
  task   String
  isDone Boolean? @default(false)
}
